<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="@mipmap/gs_screen">
    <LinearLayout
        android:id="@+id/mode_del_Box"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/setting_light_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mode_del_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="121dp"
            android:gravity="center"
            android:text="确认删除”沸水“模式？"
            android:textColor="#FFFFFFFF"
            android:textSize="32sp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="220dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="温度"
                    android:textColor="#FF979BA0"
                    android:textSize="20sp"
                    android:gravity="center_vertical"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="出水量"
                    android:textColor="#FF979BA0"
                    android:textSize="20sp"
                    android:gravity="center_vertical"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30dp">
                <TextView
                    android:id="@+id/mode_del_warm"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="98℃"
                    android:textColor="#FF979BA0"
                    android:textSize="20sp"
                    android:gravity="center_vertical"></TextView>
                <TextView
                    android:id="@+id/mode_del_water"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="350ml"
                    android:textColor="#FF979BA0"
                    android:textSize="20sp"
                    android:gravity="center_vertical"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/setting_light_bt_bg">
            <TextView
                android:id="@+id/mode_del_cancel"
                android:layout_width="299dp"
                android:layout_height="match_parent"
                android:textColor="#FF9F9F9F"
                android:textSize="28sp"
                android:gravity="center"
                android:text="取消"
                android:background="@drawable/setting_light_click_bg_l">
            </TextView>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#2BC5C5C5"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp">
            </View>
            <TextView
                android:id="@+id/mode_del_enter"
                android:layout_width="299dp"
                android:layout_height="match_parent"
                android:textColor="#FF4BA8F6"
                android:textSize="28sp"
                android:gravity="center"
                android:text="确定"
                android:background="@drawable/setting_light_click_bg_r">
            </TextView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>