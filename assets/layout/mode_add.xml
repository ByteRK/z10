<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="@mipmap/bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/mode_add_back"
            android:layout_width="26dp"
            android:layout_height="34dp"
            android:background="@mipmap/icon_back"
            android:layout_marginLeft="55dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="新增出水模式"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_marginLeft="36dp"
            ></TextView>
        <ImageView
            android:id="@+id/mode_add_home"
            android:layout_width="76dp"
            android:layout_height="72dp"
            android:layout_marginLeft="645dp"
            android:background="@mipmap/icon_home"></ImageView>
        <TextView
            android:id="@+id/mode_add_enter"
            android:layout_width="166dp"
            android:layout_height="60dp"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:text="确定"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/setting_btn_blue_r30">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setting_mode_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal"
        android:background="@drawable/btn_1affffff_r25"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/mode_add_img"
            android:layout_width="160dp"
            android:layout_height="250dp"
            android:layout_marginLeft="159dp"
            ></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginLeft="120dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="名称"
                    android:textSize="24sp"
                    android:textColor="#FF999999"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/mode_add_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="NULL"
                    android:textSize="32sp"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginLeft="236dp"
                    android:drawableBottom="@drawable/mode_add_line">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginTop="29dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="温度"
                    android:textSize="24sp"
                    android:textColor="#FF999999"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/mode_add_warm_text"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="NULL"
                    android:textSize="32sp"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginLeft="236dp"
                    android:drawableBottom="@drawable/mode_add_line">
                </TextView>
                <ImageView
                    android:id="@+id/mode_add_warm_down"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="152dp"
                    android:background="@mipmap/icon_jianhao"></ImageView>
                <ImageView
                    android:id="@+id/mode_add_warm_up"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="425dp"
                    android:background="@mipmap/icon_jiahao"></ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginTop="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="出水量"
                    android:textSize="24sp"
                    android:textColor="#FF999999"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/mode_add_water_text"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="NULL"
                    android:textSize="32sp"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginLeft="236dp"
                    android:drawableBottom="@drawable/mode_add_line">
                </TextView>
                <ImageView
                    android:id="@+id/mode_add_water_down"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="152dp"
                    android:background="@mipmap/icon_jianhao"></ImageView>
                <ImageView
                    android:id="@+id/mode_add_water_up"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="425dp"
                    android:background="@mipmap/icon_jiahao"></ImageView>
            </RelativeLayout>
        </LinearLayout>
        
        
    </LinearLayout>
</LinearLayout>