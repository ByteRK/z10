<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="@mipmap/bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="26dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/mode_back"
            android:layout_width="26dp"
            android:layout_height="34dp"
            android:background="@mipmap/icon_back"
            android:layout_marginLeft="55dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="出水模式管理"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_marginLeft="36dp"
            ></TextView>
        <ImageView
            android:layout_width="76dp"
            android:layout_height="72dp"
            android:layout_marginLeft="645dp"
            android:background="@mipmap/icon_home"></ImageView>
        <LinearLayout
            android:id="@+id/setting_modeadd"
            android:layout_width="166dp"
            android:layout_height="60dp"
            android:background="@drawable/setting_btn_blue_r30"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/icon_add"></ImageView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:gravity="center"
                android:text="新增"
                android:textSize="24sp"
                android:textColor="#FFFFFF">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <GridView
            android:id="@+id/setting_mode_listView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="51dp"
            android:layout_marginRight="51dp"
            android:orientation="horizontal"
    ></GridView>
</LinearLayout>