<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="@mipmap/gs_screen">
        <LinearLayout
            android:id="@+id/setting_screenLight_Box"
            android:layout_width="600dp"
            android:layout_height="400dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/popwindow_bg"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:layout_marginBottom="48dp"
                    android:text="屏幕亮度"
                    android:textColor="#FFFFFFFF"
                    android:gravity="center"
                    android:textSize="32sp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp">

                        <ImageView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@mipmap/icon_dark"></ImageView>

                        <SeekBar
                            android:id="@+id/setting_seekbar"
                            android:layout_width="420dp"
                            android:layout_height="52dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:thumb="@drawable/seting_page_date_btn_thumb"
                            android:progressDrawable="@drawable/setting_light_seekbar"></SeekBar>

                        <ImageView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@mipmap/icon_bright"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="99dp"
                    android:background="@drawable/popwindow_btn_bg">
                        <TextView
                            android:id="@+id/setting_screenLight_cancel"
                            android:layout_width="299dp"
                            android:layout_height="match_parent"
                            android:textColor="#FF9F9F9F"
                            android:textSize="28sp"
                            android:gravity="center"
                            android:text="取消"
                            android:background="@drawable/popwindow_btn_bg_l">
                        </TextView>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#2BC5C5C5"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="14dp">
                        </View>
                        <TextView
                            android:id="@+id/setting_screenLight_enter"
                            android:layout_width="299dp"
                            android:layout_height="match_parent"
                            android:textColor="#FF4BA8F6"
                            android:textSize="28sp"
                            android:gravity="center"
                            android:text="确定"
                            android:background="@drawable/popwindow_btn_bg_r">
                        </TextView>
                </LinearLayout>

        </LinearLayout>
</LinearLayout>