<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <!--        顶部标题-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="37dp">
        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="26dp"
            android:layout_height="34dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/icon_back"
            android:contentDescription="返回" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="设置"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="114dp"
            android:gravity="center" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="8dp"
        android:paddingRight="14dp"
        android:paddingBottom="14dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="屏幕亮度"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="64dp">
                </TextView>
                <ImageView
                    android:id="@+id/setting_screenLight"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_back"
                    android:scaleX="-1"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="411dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="制冷"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="99dp">
                </TextView>

                <Switch
                    android:id="@+id/setting_bt_cryogen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="400dp"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:gravity="center"
                    android:showText="false"
                    android:switchMinWidth="50dp"
                    android:textOff="Off"
                    android:textOn="On"
                    android:thumbTextPadding="0dp"
                    android:thumb="@drawable/seting_page_date_btn_thumb"
                    android:track="@drawable/seting_page_date_btn_track"

                    android:checked="true"

                    ></Switch>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:layout_marginTop="18dp">
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="60dp"/>
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="自定义清洗时间"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="64dp">
                </TextView>
                <ImageView
                    android:id="@+id/setting_washTime"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_back"
                    android:scaleX="-1"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="340dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="制冰"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="99dp">
                </TextView>

                <Switch
                    android:id="@+id/setting_bt_ice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="400dp"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:gravity="center"
                    android:showText="false"
                    android:switchMinWidth="50dp"
                    android:textOff="Off"
                    android:textOn="On"
                    android:thumbTextPadding="0dp"
                    android:thumb="@drawable/seting_page_date_btn_thumb"
                    android:track="@drawable/seting_page_date_btn_track"

                    android:checked="true"

                    ></Switch>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:layout_marginTop="18dp">
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="60dp"/>
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="出水模式管理"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="64dp">
                </TextView>
                <ImageView
                    android:id="@+id/setting_modechoose"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_back"
                    android:scaleX="-1"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="365dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="童锁"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="99dp">
                </TextView>

                <Switch
                    android:id="@+id/setting_bt_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="400dp"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:gravity="center"
                    android:showText="false"
                    android:switchMinWidth="50dp"
                    android:textOff="Off"
                    android:textOn="On"
                    android:thumbTextPadding="0dp"
                    android:thumb="@drawable/seting_page_date_btn_thumb"
                    android:track="@drawable/seting_page_date_btn_track"

                    android:checked="true"

                    ></Switch>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:layout_marginTop="18dp">
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="60dp"/>
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="网络配置"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="64dp">
                </TextView>
                <ImageView
                    android:id="@+id/setting_net"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_back"
                    android:scaleX="-1"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="410dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="时间设置"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="99dp">
                </TextView>

                <ImageView
                    android:id="@+id/setting_time"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_back"
                    android:scaleX="-1"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="418dp"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:layout_marginTop="18dp">
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="60dp"/>
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="UV杀菌"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="64dp">
                </TextView>
                <ImageView
                    android:id="@+id/setting_uv"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_back"
                    android:scaleX="-1"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="428dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="滤芯"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="99dp">
                </TextView>

                <ImageView
                    android:id="@+id/setting_lvxin"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_back"
                    android:scaleX="-1"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="462dp"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:layout_marginTop="18dp">
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="60dp"/>
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="版本信息"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="64dp">
                </TextView>
                <ImageView
                    android:id="@+id/setting_version"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_back"
                    android:scaleX="-1"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="411dp"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="恢复出厂设置"
                    android:textSize="24sp"
                    android:textColor="#FFEEEEEE"
                    android:gravity="center"
                    android:layout_marginLeft="99dp">
                </TextView>

                <ImageView
                    android:id="@+id/setting_reset"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/icon_back"
                    android:scaleX="-1"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="366dp"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:layout_marginTop="18dp">
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="60dp"/>
                <View
                    android:layout_width="530dp"
                    android:layout_height="match_parent"
                    android:background="#1AFFFFFF"
                    android:layout_marginLeft="100dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    

</LinearLayout>