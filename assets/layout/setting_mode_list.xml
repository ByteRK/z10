<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="264dp"
    android:layout_height="310dp"
    android:paddingRight="24dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/btn_6643464a_r25"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/mode_img"
            android:layout_width="96dp"
            android:layout_height="136dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"></ImageView>
        <TextView
            android:id="@+id/mode_name"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="null"
            android:textSize="24dp"
            android:textColor="#FFEEEEEE"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:text="温度"
                android:gravity="end"
                android:textColor="#FF9D9D9D"
                android:textSize="16dp"></TextView>
            <TextView
                android:id="@+id/mode_warm"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="null"
                android:gravity="start"
                android:textColor="#FF9D9D9D"
                android:textSize="16dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:text="出水量"
                android:gravity="end"
                android:textColor="#FF9D9D9D"
                android:textSize="16dp"></TextView>
            <TextView
                android:id="@+id/mode_water"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="null"
                android:gravity="start"
                android:textColor="#FF9D9D9D"
                android:textSize="16dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/mode_turnleft"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="68dp"
                android:background="@mipmap/icon_left"></ImageView>
            <ImageView
                android:id="@+id/mode_del"
                android:layout_width="24dp"
                android:layout_height="24dp"></ImageView>
            <ImageView
                android:id="@+id/mode_turnright"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="68dp"
                android:background="@mipmap/icon_right"></ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>