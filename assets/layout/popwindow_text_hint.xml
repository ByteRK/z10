<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:orientation="vertical"
    android:background="@mipmap/gs_page_bingkuai">
    <RelativeLayout
        android:id="@+id/popwindow_Box"
        android:layout_width="600dp"
        android:layout_height="312dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/popwindow_bg">
        <TextView
            android:id="@+id/popwindow_hint_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="130dp"
            android:lineHeight="50dp"
            android:text="启用冰块模式需先打开制冷制冰功能"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:textSize="32sp">
        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="88dp"
        android:layout_marginLeft="340dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/popwindow_btn_bg">
        <TextView
            android:id="@+id/popwindow_hint_cancel"
            android:layout_width="299dp"
            android:layout_height="match_parent"
            android:textColor="#FF9F9F9F"
            android:textSize="28sp"
            android:gravity="center"
            android:text="取消"
            android:background="@drawable/popwindow_btn_bg_l">
        </TextView>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#2BC5C5C5"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp">
        </View>
        <TextView
            android:id="@+id/popwindow_hint_enter"
            android:layout_width="299dp"
            android:layout_height="match_parent"
            android:textColor="#FF4BA8F6"
            android:textSize="28sp"
            android:gravity="center"
            android:text="确定"
            android:background="@drawable/popwindow_btn_bg_r">
        </TextView>
    </LinearLayout>
</LinearLayout>